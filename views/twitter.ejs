<% include partials/header %>
<div class="container pt-4">
  <h1 class="display-1 text-center mb-5" id="topic">
    Sentiment Analyzer
  </h1>
  <div class="row justify-content-around">
    <div class="col-md-4 bg-light rounded-lg" id="inputform">
      <form class="pt-3" onsubmit="return runAnalyzer();">
        <div class="form-group">
          <label for="searchtrend">Analyze a trend</label>
          <input
            class="form-control"
            type="text"
            name="searchtrend"
            id="searchtrend"
            placeholder="Search a trend!"
          />
        </div>
        <label for="tweetcount">Tweets to analyze</label>
        <div class="row align-items-center form-group" id="tweetcount">
          <div class="col-8 pr-0">
            <input
              type="range"
              class="custom-range"
              min="1000"
              max="50000"
              step="1"
              value="10000"
              id="tweetsrange"
            />
          </div>
          <div class="col-4">
            <input
              type="text"
              class="form-control"
              name="ntwts"
              id="numoftwtsinput"
              value="10000"
            />
          </div>
        </div>
        <div class="form-group">
          <input
            type="submit"
            class="btn btn-block btn-outline-primary"
            value="Analyze"
            id="submitbtn"
          />
        </div>
      </form>
    </div>
    <div class="col-md-7 text-center bg-light rounded-lg">
      <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
          <a
            class="nav-item nav-link active"
            id="nav-toptweets-tab"
            data-toggle="tab"
            href="#nav-toptweets"
            role="tab"
            aria-controls="nav-toptweets"
            aria-selected="true"
            >Top Tweets</a
          >
          <a
            class="nav-item nav-link"
            id="nav-wordcloud-tab"
            data-toggle="tab"
            href="#nav-wordcloud"
            role="tab"
            aria-controls="nav-wordcloud"
            aria-selected="false"
            >Word Cloud</a
          >
          <a
            class="nav-item nav-link"
            id="nav-histogram-tab"
            data-toggle="tab"
            href="#nav-histogram"
            role="tab"
            aria-controls="nav-histogram"
            aria-selected="false"
            >Histogram</a
          >
        </div>
      </nav>
      <div class="tab-content" id="nav-tabContent">
        <div
          class="tab-pane fade show active"
          id="nav-toptweets"
          role="tabpanel"
          aria-labelledby="nav-toptweets-tab"
        >
          Top Tweets over here
        </div>
        <div
          class="tab-pane fade"
          id="nav-wordcloud"
          role="tabpanel"
          aria-labelledby="nav-wordcloud-tab"
        >
          Word Cloud over here
        </div>
        <div
          class="tab-pane fade"
          id="nav-histogram"
          role="tabpanel"
          aria-labelledby="nav-histogram-tab"
        >
          Histogram over here
        </div>
      </div>
    </div>
  </div>
</div>
<script src="./assets/js/twitter.js"></script>
<% include partials/footer %>
